{
  "name": "list-helper",
  "description": "Generate and manage list easily",
  "version": "0.1.0",
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "list-helper",
    "manifest": "src/manifest.json",
    "main": "list-helper.sketchplugin",
    "repository" : {
      "type": "git",
      "url": "git+https://github.com/malakatonez/sketch-list-helper.git"
    },
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0",
    "eslint-config-sketch": "^0.2.4"
  }
}
